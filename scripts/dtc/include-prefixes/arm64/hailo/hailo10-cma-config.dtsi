&reserved_memory {
    // Override linux CMA - decrease it to 32MiB and move (no media library)
    cma: linux,cma {
        reg = <0 0x86000000 0 0x02000000>;
    };

    // Reserve memory only for integrated nnc dma.
    integrated_nnc_dma_cma: integrated_nnc_dma_cma,cma {
        compatible = "shared-dma-pool";
        reg = <0x0 0x88000000 0x0 0x40000000>;
        no-map;
    };

    hailo_media_buf_cma: hailo_media_buf,cma {
        status = "disabled";
    };
};

&integrated_nnc {
    memory-region = <&hailo_nnc_fw_cma>, <&integrated_nnc_dma_cma>;
    memory-region-names = "nnc-fw-cma", "nnc-dma-cma";
};
